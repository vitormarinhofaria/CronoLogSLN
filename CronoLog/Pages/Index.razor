@page "/"

@inject IJSRuntime js;

@using System.IO;

@code
{
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        var md = File.ReadAllText("tutorial.md");
        md = md.Replace("{API_URL}", ApiUtils.API_URL);
        await js.InvokeVoidAsync("showMd", md);
        await base.OnAfterRenderAsync(firstRender);
    }
}